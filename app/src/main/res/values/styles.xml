<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Custom_Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolBarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/common_white</item>
    </style>

    <style name="CustomToolBarTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColorSecondary">@color/common_white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorRoundBtn</item>
        <item name="android:padding">@dimen/common_dimens_5</item>

    </style>
</resources>

