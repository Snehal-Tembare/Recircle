<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.synerzip.recircle_android.ui.ListAnItemActivity">
    <TextView
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_an_item_title"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
    android:orientation="vertical"
    android:layout_margin="@dimen/dimen_40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="List an item"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item name *"/>
    <EditText
        android:hint="Search for an item to rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Rental Price*"/>
    <EditText
        android:hint="Enter Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Rental*"/>
    <EditText
        android:hint="Search for an item to rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discounts"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Offer a 30% discount for 5 day rentals."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" 40% discount for 10 day rentals. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item descripton*"/>
    <EditText
        android:hint="Add description about your item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Adjust calendar of availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Zip*"/>
    <EditText
        android:hint="Enter Zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" By listing an item, I agree to the Recircle Terms and Agreements. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
       <Button
           android:id="@+id/btn_search"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:layout_marginTop="@dimen/common_dimens_10"
           android:background="@drawable/round_button"
           android:text="Save and Continue"
           android:textColor="@color/common_white"
           android:textSize="@dimen/text_size_16" />
           </LinearLayout>
</ScrollView>

</LinearLayout>
