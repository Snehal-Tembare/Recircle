<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.synerzip.recircle_android.ui.rentals.RequestToMeFragment"
    android:background="@color/common_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_no_requests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/no_pending_rentings"
            android:gravity="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="@dimen/common_dimens_20"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_renting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
