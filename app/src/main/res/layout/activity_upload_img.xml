<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">
    <!--<include layout="@layout/partial_toolbar" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:gravity="start"
            android:onClick="txtCancel"
            android:src="@drawable/ic_close_white"
            android:text="@string/cancel"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:text="Let's upload some product images now !"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dimen_20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:onClick="imgGalleryImg"
            android:src="@drawable/ic_upload_new" />

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:onClick="imgCameraImg"
            android:src="@drawable/ic_upload_new_1" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_upload_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"
        android:layout_above="@+id/img_proceed"
        android:visibility="visible">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/img_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/border_upload_image"
        android:text="@string/proceed"
        android:textAllCaps="false"
        android:textColor="@color/common_white" />
</RelativeLayout>
