<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/partial_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_main_image"
                android:layout_width="@dimen/common_dimens_150"
                android:layout_height="@dimen/common_dimens_150"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_dimens_10"
                android:src="@drawable/camera" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_dimens_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_first"
                    android:layout_width="@dimen/common_dimens_80"
                    android:layout_height="@dimen/common_dimens_80"
                    android:src="@drawable/camera_1" />

                <ImageView
                    android:id="@+id/img_second"
                    android:layout_width="@dimen/common_dimens_80"
                    android:layout_height="@dimen/common_dimens_80"
                    android:src="@drawable/camera_1" />

                <ImageView
                    android:id="@+id/img_third"
                    android:layout_width="@dimen/common_dimens_80"
                    android:layout_height="@dimen/common_dimens_80"
                    android:src="@drawable/camera_1" />

                <ImageView
                    android:id="@+id/img_fourth"
                    android:layout_width="@dimen/common_dimens_80"
                    android:layout_height="@dimen/common_dimens_80"
                    android:src="@drawable/camera_1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_dimens_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EOS-1D X Mark II"
                android:textColor="@color/colortext"
                android:textSize="@dimen/text_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="@dimen/common_dimens_20"
                    android:layout_height="@dimen/common_dimens_20"
                    android:text="(3)" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pkmmte.view.CircularImageView
                    android:id="@+id/img_owner"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user_image"
                    app:border="true"
                    app:border_color="#EEEEEE"
                    app:border_width="2dp"
                    app:shadow="true" />

                <TextView
                    android:id="@+id/txt_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Camden Curtis"
                    android:textSize="@dimen/text_size_16" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_dimens_5"
                    android:src="@drawable/help" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/common_dimens_5"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$125/day"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_dimens_10"
                android:text="Select Dates"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/edt_enter_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittxt_square"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="@dimen/dimen_10dp"
                android:focusable="false"
                android:hint="@string/enter_dates"
                android:padding="@dimen/common_dimens_10" />

            <EditText
                android:id="@+id/edt_note"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimens_50"
                android:layout_marginTop="@dimen/common_dimens_10"
                android:background="@drawable/edittxt_square"
                android:hint="@string/note_hint"
                android:padding="@dimen/common_dimens_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total" />

                <EditText
                    android:id="@+id/edt_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/checkbox_text" />

                <ImageButton
                    android:layout_width="@dimen/common_dimens_10"
                    android:layout_height="@dimen/common_dimens_10"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_dimens_5"
                    android:src="@drawable/ic_about" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button"
                android:padding="@dimen/common_dimens_10"
                android:text="@string/request_this_item"
                android:textColor="@color/common_white"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/common_dimens_10"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/expand_txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/description_detail" />

                <TextView
                    android:id="@+id/txt_desc_see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_more"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/condition"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/expand_txt_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:text="@string/condition_detail" />

                <TextView
                    android:id="@+id/txt_condition_see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_more"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/common_dimens_15"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_dimens_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_review"
                    android:layout_gravity="center_vertical"/>

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_dimens_5"/>

                <TextView
                    android:layout_width="@dimen/common_dimens_20"
                    android:layout_height="@dimen/common_dimens_20"
                    android:text="(3)"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>