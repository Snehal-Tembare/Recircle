<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/background_color_dark">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/common_dimens_50"
                android:layout_height="@dimen/common_dimens_50"
                android:layout_marginLeft="@dimen/common_dimens_5"
                android:src="@drawable/ownerimage"
                app:border="false"
                app:border_color="@color/common_white"
                app:border_width="@dimen/dimen_1dp"
                app:shadow="true"
                android:layout_marginTop="@dimen/common_dimens_5"
                android:layout_marginBottom="@dimen/common_dimens_5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/common_dimens_10"
                android:layout_marginBottom="@dimen/common_dimens_5"
                android:layout_marginTop="@dimen/common_dimens_5">

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Snehal Tembare"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_request_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/common_dimens_2"
                    android:text="Request Id:2324435423"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/txt_request_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Requested on Apr 20,2017,7:30:00PM" />
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="@dimen/common_dimens_80"
                android:layout_height="@dimen/common_dimens_80"
                android:layout_marginRight="@dimen/common_dimens_5"
                android:layout_marginLeft="@dimen/common_dimens_5"
                android:layout_marginTop="@dimen/common_dimens_5"
                android:src="@drawable/ic_camera"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dimens_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/common_dimens_2"
                    android:layout_marginTop="@dimen/common_dimens_5"
                    android:layout_marginBottom="@dimen/common_dimens_2"
                    android:text="EOS 5D Mark III"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dimens_2"
                    android:text="29 May - 3 Jun 2017"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dimens_2"
                    android:text="2 days"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/common_dimens_2"
                    android:layout_margin="@dimen/common_dimens_2"
                    android:text="$200"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:background="@color/colorWhite"
            android:layout_marginRight="@dimen/common_dimens_5"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/common_dimens_40"
                android:layout_height="@dimen/dimen_40dp"
                android:src="@drawable/ic_check"
                android:padding="@dimen/common_dimens_5"
                android:layout_marginRight="@dimen/common_dimens_5"/>

            <ImageView
                android:layout_width="@dimen/common_dimens_40"
                android:layout_height="@dimen/dimen_40dp"
                android:padding="@dimen/common_dimens_5"
                android:src="@drawable/ic_cancel"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time to Respond: 21 May,2017 7:30:00pm"
                android:gravity="end"
                android:textStyle="italic"
                android:textColor="@color/common_black"
                android:background="#bebebe"
                android:padding="@dimen/common_dimens_5"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>